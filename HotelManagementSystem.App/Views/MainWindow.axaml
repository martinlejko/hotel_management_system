<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:HotelManagementSystem.App.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="HotelManagementSystem.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Hotel Management System"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#1E88E5"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="TextBlock.title">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 10"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" Background="#2196F3" Height="60">
            <TextBlock Text="Hotel Management System" 
                      VerticalAlignment="Center" 
                      HorizontalAlignment="Center"
                      FontSize="24" FontWeight="Bold"
                      Foreground="White"/>
        </Grid>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Dashboard">
                <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,*">
                    <!-- Status summary -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
                        <TextBlock Text="Current Occupancy" Classes="title"/>
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Occupancy Rate:" Margin="0 5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding OccupancyRate}" Margin="5 5" FontWeight="Bold"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Today's Date:" Margin="0 5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedDate}" Margin="5 5"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Total Rooms:" Margin="0 5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Rooms.Count}" Margin="5 5"/>
                        </Grid>
                    </StackPanel>

                    <!-- Search box -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
                        <TextBlock Text="Search Reservations" Classes="title"/>
                        <TextBox Text="{Binding SearchText}" Watermark="Enter customer name or room number" Margin="0 5"/>
                    </StackPanel>

                    <!-- Main dashboard content -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
                        <TextBlock Text="Welcome to Hotel Management System" Classes="title"/>
                        <TextBlock Text="Use the tabs above to navigate through the system and manage your hotel's rooms, customers, and reservations."
                                  TextWrapping="Wrap" Margin="0,20,0,0"/>
                        
                        <Button Content="Create New Reservation" HorizontalAlignment="Left" Margin="0,20,0,0"/>
                        
                        <TextBlock Text="Recent Activity" Classes="title" Margin="0,30,0,10"/>
                        <ListBox MaxHeight="200">
                            <ListBoxItem>New reservation created for Room 101</ListBoxItem>
                            <ListBoxItem>Customer John Doe checked in</ListBoxItem>
                            <ListBoxItem>Room 204 checked out and marked for cleaning</ListBoxItem>
                            <ListBoxItem>New customer Jane Smith registered</ListBoxItem>
                        </ListBox>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Rooms">
                <StackPanel Margin="10">
                    <TextBlock Text="Rooms Management" Classes="title"/>
                    <Button Content="Add New Room" HorizontalAlignment="Left"/>
                    
                    <TextBlock Text="Room management functionality allows you to add, edit, and view all rooms in your hotel."
                               TextWrapping="Wrap" Margin="0,20,0,0"/>
                    <TextBlock Text="Features include:" Margin="0,10,0,0"/>
                    <ListBox>
                        <ListBoxItem>View all rooms and their status</ListBoxItem>
                        <ListBoxItem>Add new rooms with details like room number, type, and capacity</ListBoxItem>
                        <ListBoxItem>Edit existing room details</ListBoxItem>
                        <ListBoxItem>Mark rooms as available or unavailable</ListBoxItem>
                    </ListBox>
                </StackPanel>
            </TabItem>

            <TabItem Header="Customers">
                <StackPanel Margin="10">
                    <TextBlock Text="Customers Management" Classes="title"/>
                    <Button Content="Add New Customer" HorizontalAlignment="Left"/>
                    
                    <TextBlock Text="Customer management functionality allows you to maintain your customer database and their history."
                               TextWrapping="Wrap" Margin="0,20,0,0"/>
                    <TextBlock Text="Features include:" Margin="0,10,0,0"/>
                    <ListBox>
                        <ListBoxItem>Track customer personal information</ListBoxItem>
                        <ListBoxItem>View customer reservation history</ListBoxItem>
                        <ListBoxItem>Edit customer details</ListBoxItem>
                        <ListBoxItem>Search for customers by name or email</ListBoxItem>
                    </ListBox>
                </StackPanel>
            </TabItem>

            <TabItem Header="Reservations">
                <StackPanel Margin="10">
                    <TextBlock Text="Reservations Management" Classes="title"/>
                    <Button Content="Create New Reservation" HorizontalAlignment="Left"/>
                    
                    <TextBlock Text="Reservation management functionality allows you to create and manage all hotel bookings."
                               TextWrapping="Wrap" Margin="0,20,0,0"/>
                    <TextBlock Text="Features include:" Margin="0,10,0,0"/>
                    <ListBox>
                        <ListBoxItem>Create new reservations with date range and room selection</ListBoxItem>
                        <ListBoxItem>Check room availability for specific dates</ListBoxItem>
                        <ListBoxItem>Process check-ins and check-outs</ListBoxItem>
                        <ListBoxItem>Manage reservation status and special requests</ListBoxItem>
                    </ListBox>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window> 