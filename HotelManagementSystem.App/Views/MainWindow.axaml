<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:HotelManagementSystem.App.ViewModels"
        xmlns:views="using:HotelManagementSystem.App.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="HotelManagementSystem.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Hotel Management System"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#1E88E5"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="TextBlock.title">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 10"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" Background="#2196F3" Height="60">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Hotel Management System" 
                          HorizontalAlignment="Center"
                          FontSize="24" FontWeight="Bold"
                          Foreground="White"
                          Margin="20 0 0 0"/>
                
                <!-- Back button - only visible when editing -->
                <Button Content="â† Back" 
                        Command="{Binding BackToListCommand}"
                        IsVisible="{Binding !IsViewingList}"
                        Margin="20 0 0 0"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- Form content - visible when editing -->
            <ContentControl Content="{Binding CurrentView}" 
                           IsVisible="{Binding !IsViewingList}"/>
            
            <!-- Main TabControl - visible when not editing -->
            <TabControl IsVisible="{Binding IsViewingList}" Margin="10">
                <TabItem Header="Dashboard">
                    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,*">
                        <!-- Status summary -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
                            <TextBlock Text="Current Occupancy" Classes="title"/>
                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Occupancy Rate:" Margin="0 5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding OccupancyRate}" Margin="5 5" FontWeight="Bold"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Today's Date:" Margin="0 5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedDate}" Margin="5 5"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Total Rooms:" Margin="0 5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Rooms.Count}" Margin="5 5"/>
                            </Grid>
                        </StackPanel>

                        <!-- Search box -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
                            <TextBlock Text="Search Reservations" Classes="title"/>
                            <TextBox Text="{Binding SearchText}" Watermark="Enter customer name or room number" Margin="0 5"/>
                        </StackPanel>

                        <!-- Main dashboard content -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
                            <TextBlock Text="Welcome to Hotel Management System" Classes="title"/>
                            <TextBlock Text="Use the tabs above to navigate through the system and manage your hotel's rooms, customers, and reservations."
                                      TextWrapping="Wrap" Margin="0,20,0,0"/>
                            
                            <Button Content="Create New Reservation" 
                                    HorizontalAlignment="Left" 
                                    Margin="0,20,0,0"
                                    Command="{Binding AddReservationCommand}"/>
                            
                            <TextBlock Text="Recent Reservations" Classes="title" Margin="0,30,0,10"/>
                            <DataGrid MaxHeight="200"
                                      ItemsSource="{Binding RecentReservations}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Customer" Binding="{Binding Customer.FullName}" />
                                    <DataGridTextColumn Header="Room" Binding="{Binding Room.RoomNumber}" />
                                    <DataGridTextColumn Header="Check-in Date" Binding="{Binding CheckInDate, StringFormat=\{0:d\}}" />
                                    <DataGridTextColumn Header="Check-out Date" Binding="{Binding CheckOutDate, StringFormat=\{0:d\}}" />
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <TabItem Header="Rooms">
                    <Grid RowDefinitions="Auto,*" Margin="10">
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Rooms Management" Classes="title"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Add New Room" 
                                        Command="{Binding AddRoomCommand}"/>
                                <Button Content="Edit Room" 
                                        Command="{Binding EditRoomCommand}"/>
                                <Button Content="Delete Room" 
                                        Command="{Binding DeleteRoomCommand}"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <DataGrid Grid.Row="1" 
                                  Margin="0,20,0,0"
                                  ItemsSource="{Binding Rooms}"
                                  SelectedItem="{Binding SelectedRoom}"
                                  SelectionMode="Single"
                                  SelectionChanged="DataGrid_SelectionChanged"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" />
                                <DataGridTextColumn Header="Type" Binding="{Binding Type}" />
                                <DataGridTextColumn Header="Capacity" Binding="{Binding Capacity}" />
                                <DataGridTextColumn Header="Price per Night" Binding="{Binding PricePerNight, StringFormat=\{0:C\}}" />
                                <DataGridCheckBoxColumn Header="Available" Binding="{Binding IsAvailable}" />
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem Header="Customers">
                    <Grid RowDefinitions="Auto,*" Margin="10">
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Customers Management" Classes="title"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Add New Customer" 
                                        Command="{Binding AddCustomerCommand}"/>
                                <Button Content="Edit Customer" 
                                        Command="{Binding EditCustomerCommand}"/>
                                <Button Content="Delete Customer" 
                                        Command="{Binding DeleteCustomerCommand}"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <DataGrid Grid.Row="1" 
                                  Margin="0,20,0,0"
                                  ItemsSource="{Binding Customers}"
                                  SelectedItem="{Binding SelectedCustomer}"
                                  SelectionMode="Single"
                                  SelectionChanged="DataGrid_SelectionChanged"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" />
                                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" />
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                                <DataGridTextColumn Header="Phone Number" Binding="{Binding PhoneNumber}" />
                                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem Header="Reservations">
                    <Grid RowDefinitions="Auto,*" Margin="10">
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Reservations Management" Classes="title"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Create New Reservation" 
                                        Command="{Binding AddReservationCommand}"/>
                                <Button Content="Edit Reservation" 
                                        Command="{Binding EditReservationCommand}"/>
                                <Button Content="Delete Reservation" 
                                        Command="{Binding DeleteReservationCommand}"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <DataGrid Grid.Row="1" 
                                  Margin="0,20,0,0"
                                  ItemsSource="{Binding RecentReservations}"
                                  SelectedItem="{Binding SelectedReservation}"
                                  SelectionMode="Single"
                                  SelectionChanged="DataGrid_SelectionChanged"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Customer" Binding="{Binding Customer.FullName}" />
                                <DataGridTextColumn Header="Room" Binding="{Binding Room.RoomNumber}" />
                                <DataGridTextColumn Header="Check-in Date" Binding="{Binding CheckInDate, StringFormat=\{0:d\}}" />
                                <DataGridTextColumn Header="Check-out Date" Binding="{Binding CheckOutDate, StringFormat=\{0:d\}}" />
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                                <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat=\{0:C\}}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>
            
            <!-- Delete Confirmation Panel - overlays the main content when confirming deletion -->
            <Border Background="#80000000" IsVisible="{Binding IsConfirmingDelete}">
                <Border Background="White" 
                        CornerRadius="5" 
                        Width="400" 
                        Height="200" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        BoxShadow="0 0 10 2 #40000000">
                    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
                        <TextBlock Grid.Row="0" 
                                  Text="{Binding DeleteConfirmationTitle}" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding DeleteConfirmationMessage}" 
                                  TextWrapping="Wrap"
                                  VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Row="2" 
                                   Orientation="Horizontal" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,10,0,0"
                                   Spacing="10">
                            <Button Content="Cancel" 
                                    Width="100" 
                                    Command="{Binding CancelDeleteCommand}"/>
                            <Button Content="Delete" 
                                    Width="100" 
                                    Background="Red" 
                                    Foreground="White"
                                    Command="{Binding ConfirmDeleteCommand}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Border>
        </Grid>
    </Grid>
</Window> 