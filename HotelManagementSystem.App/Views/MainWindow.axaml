<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:HotelManagementSystem.App.ViewModels"
        xmlns:views="using:HotelManagementSystem.App.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="HotelManagementSystem.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Hotel Management System"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <!-- All styles moved to App.axaml -->
    </Window.Styles>

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" Background="#2196F3" Height="70">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <Image Source="/Assets/mews_off_brand.png" 
                       Height="50" 
                       Margin="0,0,15,0"
                       VerticalAlignment="Center"/>
                <TextBlock Text="Hotel Management System" 
                          FontSize="26" FontWeight="SemiBold"
                          Foreground="White"
                          VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Back button - only visible when editing -->
            <Button Content="â† Back" 
                    Command="{Binding BackToListCommand}"
                    IsVisible="{Binding !IsViewingList}"
                    HorizontalAlignment="Left"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Background="#1565C0"/>
        </Grid>

        <!-- Main Content with slight padding for better visual appeal -->
        <Grid Grid.Row="1" Margin="0,0,0,0">
            <!-- Form content - visible when editing -->
            <ContentControl Content="{Binding CurrentView}" 
                           IsVisible="{Binding !IsViewingList}"/>
            
            <!-- Main TabControl - visible when not editing -->
            <TabControl IsVisible="{Binding IsViewingList}" Margin="10">
                <TabItem Header="Dashboard">
                    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,*">
                        <!-- Status summary -->
                        <Border Grid.Row="0" Grid.Column="0" Margin="10" 
                               Background="#F5F5F5" 
                               CornerRadius="8" 
                               BoxShadow="2 2 5 #20000000"
                               Padding="15">
                            <StackPanel>
                                <TextBlock Text="Current Occupancy" Classes="title"/>
                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Occupancy Rate:" Margin="0 5" Foreground="Black"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding OccupancyRate}" Margin="10 5" FontWeight="Bold" Foreground="Black"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Today's Date:" Margin="0 5" Foreground="Black"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedDate}" Margin="10 5" Foreground="Black"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Total Rooms:" Margin="0 5" Foreground="Black"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Rooms.Count}" Margin="10 5" Foreground="Black"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Search box -->
                        <Border Grid.Row="0" Grid.Column="1" Margin="10"
                               Background="#F5F5F5" 
                               CornerRadius="8" 
                               BoxShadow="2 2 5 #20000000"
                               Padding="15">
                            <StackPanel>
                                <TextBlock Text="Search Reservations" Classes="title"/>
                                <TextBox Text="{Binding SearchText}" Watermark="Enter customer name or room number" Margin="0 10"/>
                            </StackPanel>
                        </Border>

                        <!-- Main dashboard content -->
                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10"
                               Background="#F5F5F5" 
                               CornerRadius="8" 
                               BoxShadow="2 2 5 #20000000"
                               Padding="15">
                            <StackPanel>
                                <Image Source="/Assets/mews_off_brand.png" 
                                       Height="80"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,20"/>
                                <TextBlock Text="Welcome to Hotel Management System" Classes="title"/>
                                <TextBlock Text="Use the tabs above to navigate through the system and manage your hotel's rooms, customers, and reservations."
                                          TextWrapping="Wrap" Margin="0,10,0,15" Foreground="Black"/>
                                
                                <Button Content="Create New Reservation" 
                                        HorizontalAlignment="Left" 
                                        Margin="0,5,0,20"
                                        Command="{Binding AddReservationCommand}"/>
                                
                                <TextBlock Text="Recent Reservations" Classes="title" Margin="0,10,0,10"/>
                                <DataGrid MaxHeight="200"
                                          ItemsSource="{Binding RecentReservations}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          Background="White">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Customer" Binding="{Binding Customer.FullName}" />
                                        <DataGridTextColumn Header="Room" Binding="{Binding Room.RoomNumber}" />
                                        <DataGridTextColumn Header="Check-in Date" Binding="{Binding CheckInDate, StringFormat=\{0:d\}}" />
                                        <DataGridTextColumn Header="Check-out Date" Binding="{Binding CheckOutDate, StringFormat=\{0:d\}}" />
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem Header="Rooms">
                    <Grid RowDefinitions="Auto,*" Margin="10">
                        <Border Grid.Row="0" 
                               Background="#F5F5F5" 
                               CornerRadius="8" 
                               BoxShadow="2 2 5 #20000000"
                               Padding="15">
                            <StackPanel>
                                <TextBlock Text="Rooms Management" Classes="title"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Add New Room" 
                                            Command="{Binding AddRoomCommand}"/>
                                    <Button Content="Edit Room" 
                                            Command="{Binding EditRoomCommand}"/>
                                    <Button Content="Delete Room" 
                                            Command="{Binding DeleteRoomCommand}"
                                            Background="#F44336"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Row="1" 
                                Background="#F5F5F5" 
                                CornerRadius="8" 
                                BoxShadow="2 2 5 #20000000"
                                Padding="15"
                                Margin="0,10,0,0">
                            <DataGrid
                                  Margin="0"
                                  ItemsSource="{Binding Rooms}"
                                  SelectedItem="{Binding SelectedRoom}"
                                  SelectionMode="Single"
                                  SelectionChanged="DataGrid_SelectionChanged"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  Background="White">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" />
                                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" />
                                    <DataGridTextColumn Header="Capacity" Binding="{Binding Capacity}" />
                                    <DataGridTextColumn Header="Price per Night" Binding="{Binding PricePerNight, StringFormat=\{0:C\}}" />
                                    <DataGridCheckBoxColumn Header="Available" Binding="{Binding IsAvailable}" />
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem Header="Customers">
                    <Grid RowDefinitions="Auto,*" Margin="10">
                        <Border Grid.Row="0" 
                               Background="#F5F5F5" 
                               CornerRadius="8" 
                               BoxShadow="2 2 5 #20000000"
                               Padding="15">
                            <StackPanel>
                                <TextBlock Text="Customers Management" Classes="title"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Add New Customer" 
                                            Command="{Binding AddCustomerCommand}"/>
                                    <Button Content="Edit Customer" 
                                            Command="{Binding EditCustomerCommand}"/>
                                    <Button Content="Delete Customer" 
                                            Command="{Binding DeleteCustomerCommand}"
                                            Background="#F44336"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Row="1" 
                                Background="#F5F5F5" 
                                CornerRadius="8" 
                                BoxShadow="2 2 5 #20000000"
                                Padding="15"
                                Margin="0,10,0,0">
                            <DataGrid
                                  Margin="0"
                                  ItemsSource="{Binding Customers}"
                                  SelectedItem="{Binding SelectedCustomer}"
                                  SelectionMode="Single"
                                  SelectionChanged="DataGrid_SelectionChanged"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  Background="White">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" />
                                    <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" />
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                                    <DataGridTextColumn Header="Phone Number" Binding="{Binding PhoneNumber}" />
                                    <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem Header="Reservations">
                    <Grid RowDefinitions="Auto,*" Margin="10">
                        <Border Grid.Row="0" 
                               Background="#F5F5F5" 
                               CornerRadius="8" 
                               BoxShadow="2 2 5 #20000000"
                               Padding="15">
                            <StackPanel>
                                <TextBlock Text="Reservations Management" Classes="title"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Create New Reservation" 
                                            Command="{Binding AddReservationCommand}"/>
                                    <Button Content="Edit Reservation" 
                                            Command="{Binding EditReservationCommand}"/>
                                    <Button Content="Delete Reservation" 
                                            Command="{Binding DeleteReservationCommand}"
                                            Background="#F44336"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Row="1" 
                                Background="#F5F5F5" 
                                CornerRadius="8" 
                                BoxShadow="2 2 5 #20000000"
                                Padding="15"
                                Margin="0,10,0,0">
                            <DataGrid
                                  Margin="0"
                                  ItemsSource="{Binding RecentReservations}"
                                  SelectedItem="{Binding SelectedReservation}"
                                  SelectionMode="Single"
                                  SelectionChanged="DataGrid_SelectionChanged"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  Background="White">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Customer" Binding="{Binding Customer.FullName}" />
                                    <DataGridTextColumn Header="Room" Binding="{Binding Room.RoomNumber}" />
                                    <DataGridTextColumn Header="Check-in Date" Binding="{Binding CheckInDate, StringFormat=\{0:d\}}" />
                                    <DataGridTextColumn Header="Check-out Date" Binding="{Binding CheckOutDate, StringFormat=\{0:d\}}" />
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                                    <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat=\{0:C\}}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </TabItem>
            </TabControl>
            
            <!-- Delete Confirmation Panel - overlays the main content when confirming deletion -->
            <Border Background="#80000000" IsVisible="{Binding IsConfirmingDelete}">
                <Border Background="White" 
                        CornerRadius="8" 
                        Width="450" 
                        Height="220" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        BoxShadow="2 2 5 #40000000">
                    <Grid RowDefinitions="Auto,*,Auto" Margin="25">
                        <TextBlock Grid.Row="0" 
                                  Text="{Binding DeleteConfirmationTitle}" 
                                  FontSize="20" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,15"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding DeleteConfirmationMessage}" 
                                  TextWrapping="Wrap"
                                  FontSize="14"
                                  VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Row="2" 
                                   Orientation="Horizontal" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,15,0,0"
                                   Spacing="15">
                            <Button Content="Cancel" 
                                    Width="120" 
                                    Command="{Binding CancelDeleteCommand}"
                                    Background="#9E9E9E"/>
                            <Button Content="Delete" 
                                    Width="120"
                                    Background="#F44336" 
                                    Foreground="White"
                                    Command="{Binding ConfirmDeleteCommand}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Border>
        </Grid>
    </Grid>
</Window> 